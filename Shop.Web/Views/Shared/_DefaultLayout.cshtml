<!DOCTYPE html>
<html lang="en" dir="rtl">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title> @ViewData["Title"] | molla </title>
    <partial name="_TagsRefrences" />
    <partial name="_HeaderReferences" />
    @RenderSection("Styles",false)
</head>

<body>
    <div class="page-wrapper">
        @await Component.InvokeAsync("SiteHeader")
        <main class="main">
            @RenderBody()
        </main>
        @await Component.InvokeAsync("SiteFooter")
    </div>
    <button id="scroll-top" title="Back to Top"><i class="icon-arrow-up"></i></button>

    <partial name="_Mobile" />
    <partial name="_FooterReferences" />
    @RenderSection("Scripts",false)
    <partial name="_Message" />
</body>


</html>